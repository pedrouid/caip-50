{
  "name": "caip-50",
  "description": "CAIP-50 Multi-Chain Account Identifier",
  "version": "0.1.0",
  "author": "Pedro Gomes <github.com/pedrouid>",
  "license": "MIT",
  "keywords": [
    "caip",
    "account",
    "blockhain",
    "multichain",
    "multiformats",
    "multicodec"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "unpkg": "dist/umd/index.min.js",
  "homepage": "https://github.com/pedrouid/caip-50",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedrouid/caip-50.git"
  },
  "bugs": {
    "url": "https://github.com/pedrouid/caip-50/issues"
  },
  "scripts": {
    "start": "tsdx watch",
    "clean": "rm -rf dist",
    "build:cjs": "yarn tsc -p tsconfig.cjs.json",
    "build:umd": "webpack",
    "build:esm": "yarn tsc -p tsconfig.esm.json",
    "build": "yarn clean && yarn build:cjs && yarn build:umd && yarn build:esm",
    "test": "tsdx test ./test",
    "lint": "tsdx lint src test",
    "prepare": "yarn lint && yarn build && yarn test",
    "publish:beta": "yarn publish --tag=beta"
  },
  "dependencies": {
    "varint": "^6.0.0",
    "uint8arrays": "^2.1.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@types/varint": "^6.0.0",
    "husky": "^4.3.0",
    "tsdx": "^0.14.1",
    "tslib": "^1.10.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
